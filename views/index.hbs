.modal-header {
    padding: 2px 16px;
    background-color: #5cb85c;
    color: white;
}

.modal-body {padding: 2px 16px;}

.modal-form {padding: 2px 16px;}

.modal-button {
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
}

.modal-footer {
    padding: 2px 16px;
    background-color: #5cb85c;
    color: white;
}

.container {
  position: relative;
  width: 50%;
}

.overlay {
  position: relative;
  top: 50%;
  left: 50%;
  background: rgba(0, 0, 0, 0);
  transition: background 0.5s ease;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
}

.container:hover img {
  opacity: 0.3;
}

.container:hover .overlay {
  background: rgba(0, 0, 0, .5);
}

img {
  position: absolute;
  left: 0;
  max-width: 500px;
}

.title {
  position: absolute;
  width: 500px;
  left: 0;
  top: 120px;
  font-weight: 700;
  font-size: 30px;
  text-align: center;
  text-transform: uppercase;
  color: white;
  z-index: 1;
  transition: top .5s ease;
}

.container:hover .title {
  top: 90px;
}

.button {
  position: relative;
  width: 200px;
  left:0;
  top: 60%;
  text-align: left;
  opacity: 0;
  transition: opacity .35s ease;
  text-decoration: none;
}

.remove {
  position: relative;
  left: 100%;
  opacity: 0;
  transition: opacity .35s ease;
}

.remove a {
  right: 5px;
  top: 5px;
  color: black;
  position: absolute;
  text-align: right;
  border: solid 2px black;
  font-family: "Trebuchet MS";
  padding: 2px 6px;
  z-index:1;
  text-decoration: none;
}

.button a {
  position:absolute;
  width: 100px;
  padding: 12px 48px;
  text-align: left;
  color: black;
  font-family: "Trebuchet MS";
  border: solid 2px black;
  z-index: 1;
  text-decoration: none;
}

.container:hover .button {
  opacity: 1;
}

.container:hover .remove {
  opacity: 1;
 }
